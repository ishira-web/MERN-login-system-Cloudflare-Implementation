PORT=5000
MONGODB_URI=mongodb://localhost:27017/mern-auth
NODE_ENV=development

# Cloudflare Access Configuration
# Your Cloudflare team domain (e.g., yourcompany.cloudflareaccess.com)
CLOUDFLARE_TEAM_DOMAIN=your-team-name.cloudflareaccess.com
# The Audience (AUD) tag from your Cloudflare Access Application
CLOUDFLARE_POLICY_AUD=your-policy-audience-tag-here

# Development Mode Settings (ONLY for local testing)
# Set to 'true' to bypass Cloudflare Access authentication locally
# IMPORTANT: Set to 'false' or remove in production!
DEV_BYPASS_AUTH=false
DEV_USER_EMAIL=dev@example.com
DEV_USER_NAME=Dev User
